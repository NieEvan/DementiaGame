.container {
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-container {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin: 16rpx 0;
  height: 300rpx;
}

.score-chart {
  width: 100%;
  height: 100%;
}

.history-list {
  padding: 10rpx 0;
}

.history-card {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.card-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-level {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.score {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.level {
  font-size: 24rpx;
  color: #666;
}

.times {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
  justify-content: flex-end;
  margin-left: 16rpx;
}

.time-chip {
  font-size: 20rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.date {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.no-history {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.no-history .subtitle {
  font-size: 24rpx;
  color: #bbb;
}