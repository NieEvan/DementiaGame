.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-status {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.game-status text {
  font-size: 32rpx;
  color: #333;
}

.grid-container {
  width: 90%;
  aspect-ratio: 1;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.grid {
  display: grid;
  gap: 20rpx;
  width: 100%;
  height: 100%;
  aspect-ratio: 1;
}

.tile {
  background: #e0e0e0;
  border-radius: 10rpx;
  transition: all 0.3s ease;
  aspect-ratio: 1;
  width: 100%;
  height: 100%;
}

.tile.lit {
  background: #4CAF50;
}

.tile.clicked {
  background: #2196F3;
}

.message {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

.tile.error {
  background: #ff4444;
  animation: shake 0.2s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.game-over-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.game-over-overlay.visible {
  opacity: 1;
  pointer-events: auto;
}

.game-over-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.game-over-text text {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
  text-align: center;
}

.final-score {
  font-size: 48rpx !important;
  color: #ffffff !important;
}

.game-over-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 40rpx;
}

.game-button {
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.game-button.replay {
  background: #4CAF50;
  color: white;
}

.game-button.home {
  background: #2196F3;
  color: white;
} 